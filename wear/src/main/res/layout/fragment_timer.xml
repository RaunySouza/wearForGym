<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:custom="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/primaryColor"
             tools:context="br.com.rauny.wearforgym.fragment.TimerFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/previous_training_button"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/previous_training_icon"
                android:background="@android:color/transparent"/>
            <ImageButton
                android:id="@+id/next_training_button"
                android:layout_width="28dp"
                android:layout_height="26dp"
                android:src="@drawable/next_training_icon"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/current_exercise_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Supino Reto"/>
            <TextView
                android:id="@+id/current_repetitions_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8sp"
                android:text="12/10/8"/>
        </LinearLayout>

    </LinearLayout>

    <com.github.lzyzsd.circleprogress.DonutProgress
        android:id="@+id/donut_progress"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        custom:donut_progress="90"
        custom:donut_unfinished_color="@color/secondaryColor"
        custom:donut_finished_color="@color/tertiaryColor"
        custom:donut_show_text="false"
        custom:donut_angle="270"/>

    <br.com.rauny.wearforgym.layout.CountDownTimerLayout
        android:id="@+id/count_down_timer"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0dp"
        android:clickable="true"/>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_below="@id/count_down_timer"
        android:layout_marginTop="6dp"
        android:layout_centerHorizontal="true">

        <Chronometer
            android:id="@+id/training_time_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/chronometer_text_size"/>

        <ImageButton
            android:id="@+id/start_stop_training_button"
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/start_stop_training_selector"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</RelativeLayout>
